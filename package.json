{
  "name": "godot-node-tree-vscode",
  "displayName": "Godot Node Tree",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Godot Node Tree",
      "properties": {
        "godotNodeTree.projectPath": {
          "type": "string",
          "title": "Project path",
          "description": "Relative path to the directory containing the Godot project."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "godot",
          "title": "Godot Node Tree",
          "icon": "icons/godot.svg"
        }
      ]
    },
    "views": {
      "godot": [
        {
          "id": "nodeTree",
          "name": "Godot Node Tree",
          "icon": "$(symbol-class)"
        }
      ]
    },
    "commands": [
      {
        "command": "godot-node-tree-vscode.refreshNodeTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "godot-node-tree-vscode.refreshNodeTree",
          "group": "navigation",
          "when": "view == nodeTree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "ffi-rs": "^1.2.10"
  }
}
